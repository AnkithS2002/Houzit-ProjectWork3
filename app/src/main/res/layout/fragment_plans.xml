<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PlansFragment"
    android:background="#FFFFFF">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/planstext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose the plan                 that's right for you"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:textSize="30sp"

                />
<!--            Silver plan cardView-->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/BasicPlanCard"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="15dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp"
                app:strokeColor="@color/black"
                app:strokeWidth="2dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#D7EAFF">
                    <LinearLayout
                        android:layout_width="210dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No. of Contacts: 25"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Locality Experts: No"
                            android:textColor="@color/black"
                            android:textSize="20sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rent Negotiation: No"
                            android:textColor="@color/black"
                            android:textSize="20sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Houzit Assistance: No"
                            android:textColor="@color/black"
                            android:textSize="20sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Home guaranteed"
                            android:textColor="@color/black"
                            android:textSize="20sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="or 100% refund: No"
                            android:textColor="@color/black"
                            android:textSize="20sp"/>

                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        >
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:text="Basic    Plan"
                            android:gravity="center"
                            android:textSize="30dp"
                            android:textStyle="bold"
                            android:textColor="#4A4A4A"
                            android:layout_alignParentRight="true"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/bg2"/>

                    </RelativeLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
<!--        Gold plan CardView-->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/SilverPlanCard"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="15dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp"
                app:strokeColor="@color/black"
                app:strokeWidth="2dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#EAEAEA">
                    <LinearLayout
                        android:layout_width="210dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No. of Contacts: 50"
                            android:textColor="@color/black"
                            android:textSize="20sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Locality Experts: Yes"
                            android:textColor="@color/black"
                            android:textSize="20sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rent Negotiation: Yes"
                            android:textColor="@color/black"
                            android:textSize="20sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Houzit Assistance: Yes"
                            android:textColor="@color/black"
                            android:textSize="20sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Home guaranteed"
                            android:textColor="@color/black"
                            android:textSize="20sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="or 100% refund: No"
                            android:textColor="@color/black"
                            android:textSize="20sp"/>

                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:text="Silver   Plan"
                            android:gravity="center"
                            android:textSize="30dp"
                            android:textStyle="bold"
                            android:textColor="#4A4A4A"
                            android:layout_alignParentRight="true"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/bg3"/>

                    </RelativeLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

<!--        Platinum plan CardView-->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/GoldPlanCard"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="15dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp"
                app:strokeColor="@color/black"
                app:strokeWidth="2dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#FFF8D8">
                    <LinearLayout
                        android:layout_width="210dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No. of Contacts: 100"
                            android:textColor="@color/black"
                            android:textSize="20sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Locality Experts: Yes"
                            android:textColor="@color/black"
                            android:textSize="20sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rent Negotiation: Yes"
                            android:textColor="@color/black"
                            android:textSize="20sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Houzit Assistance: Yes"
                            android:textColor="@color/black"
                            android:textSize="20sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Home guaranteed"
                            android:textColor="@color/black"
                            android:textSize="20sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="or 100% refund: Yes"
                            android:textColor="@color/black"
                            android:textSize="20sp"/>

                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:text="Gold      plan"
                            android:gravity="center"
                            android:textSize="30dp"
                            android:textStyle="bold"
                            android:textColor="#4A4A4A"
                            android:layout_alignParentRight="true"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/goldplanbg"/>

                    </RelativeLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/PricingTextCard"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp"
                app:strokeColor="@color/black"
                app:strokeWidth="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/bg4">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Pricing Details"
                        android:textSize="30sp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/PricingCard"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="15dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp"
                app:strokeColor="@color/black"
                app:strokeWidth="2dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:background="@drawable/bg1">

                    <TextView
                        android:id="@+id/basictxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Basic Plan"
                        android:textColor="@color/black"
                        android:textSize="30sp"
                        android:layout_marginVertical="9dp"
                        android:layout_marginHorizontal="33dp"/>

                    <TextView
                        android:id="@+id/silvertxt"
                        android:layout_below="@+id/basictxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Silver Plan"
                        android:textColor="@color/black"
                        android:textSize="30sp"
                        android:layout_marginVertical="9dp"
                        android:layout_marginHorizontal="33dp"/>
                    <TextView
                        android:id="@+id/goldtxt"
                        android:layout_below="@id/silvertxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gold Plan"
                        android:textColor="@color/black"
                        android:textSize="30sp"
                        android:layout_marginVertical="9dp"
                        android:layout_marginHorizontal="33dp"/>

                    <Button
                        android:id="@+id/basicbtn"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="6dp"
                        android:layout_marginBottom="6dp"
                        android:layout_toEndOf="@+id/basictxt"
                        android:backgroundTint="#3F51B5"
                        android:text="Rs. 500" />
                    <Button
                        android:id="@+id/silverbtn"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Rs. 1500"
                        android:layout_toEndOf="@+id/silvertxt"
                        android:layout_below="@+id/basicbtn"
                        android:layout_margin="6dp"
                        android:backgroundTint="#3F51B5"/>

                    <Button
                        android:id="@+id/goldbtn"
                        android:layout_below="@+id/silverbtn"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginStart="16dp"
                        android:layout_toEndOf="@+id/goldtxt"
                        android:text="Rs. 2500"
                        android:backgroundTint="#3F51B5"/>
                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>


    </ScrollView>



</RelativeLayout>